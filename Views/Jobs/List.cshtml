@model IEnumerable<Jobify.Models.Job>

@{
    ViewBag.Title = "Jobs";
}
<div class="breadcrumbs aos-init aos-animate" data-aos="fade-in">
    <div class="container">
        <h2>List of Available Jobs</h2>
    </div>
</div>
<section id="about" class="about">
    <div class="container aos-init aos-animate" data-aos="fade-up">
        <p>
            @Html.ActionLink("Post a new Job", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Company.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DurationInMonths)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DurationInMonths)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.JobId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.JobId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.JobId })
                    </td>
                </tr>
            }
        </table>
    </div>
</section>