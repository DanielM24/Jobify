@model IEnumerable<Jobify.Models.ApplicantDetails>

@{
    ViewBag.Title = "UserProfiles";
}

<div class="breadcrumbs aos-init aos-animate" data-aos="fade-in">
    <div class="container">
        <h2>Applicants Details</h2>
    </div>
</div>

<section id="about" class="about">
    <div class="container aos-init aos-animate" data-aos="fade-up">
        <p>
            @Html.ActionLink("Add a new profile", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Applicant.FirstName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Applicant.FirstName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ApplicantDetailsId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ApplicantDetailsId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ApplicantDetailsId })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>